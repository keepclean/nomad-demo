  "bind_addr": "{{ GetPrivateInterfaces | exclude \"network\" \"10.0.2.0/24\" | attr \"address\"}}",
  {%- endraw %}
  "bootstrap_expect": 1,
  "datacenter": "{{ pillar['datacenter'] }}",
